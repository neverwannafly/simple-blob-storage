<div class="devise-form">
  <div class="devise-form__container">
    <h2 class="center">Create an account</h2>

    <%= form_for(resource, class: 'devise-form__form', as: resource_name, url: registration_path(resource_name)) do |f| %>
      <%= render "devise/shared/error_messages", resource: resource %>

      <div class="devise-form__input">
        <%= f.label :username %><br />
        <%= f.text_field :username, required: true %>
      </div>

      <div class="devise-form__input">
        <%= f.label :email %><br />
        <%= f.email_field :email, autofocus: true, autocomplete: "email", required: true %>
      </div>

      <div class="devise-form__input">
        <%= f.label :password %>
        <%= f.password_field :password, autocomplete: "new-password", required: true %>
      </div>

      <div class="devise-form__input">
        <%= f.label :password_confirmation %><br />
        <%= f.password_field :password_confirmation, autocomplete: "new-password" , required: true%>
      </div>

      <div>
        <%= f.submit "Sign up", class: 'devise-form__action' %>
      </div>
    <% end %>

    <div class="center">
      <%= render "devise/shared/links" %>
    </div>
  </div>
</div>